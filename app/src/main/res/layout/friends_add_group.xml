<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/popup_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/popwindow"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="选择分组"
            android:textColor="#000000"
            android:textSize="20dp" />

        <View
            android:id="@+id/view"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_below="@id/title0"
            android:layout_centerHorizontal="true"
            android:background="#0099ff" />

        <ScrollView
            android:id="@+id/scrollView4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:minHeight="100dp">

            <RadioGroup
                android:id="@+id/radio"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_centerHorizontal="true"></RadioGroup>
        </ScrollView>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scrollView4"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addFriend"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ripple"
                android:text="添加好友"
                android:textColor="#fff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/close"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ripple_red"
                android:text="取消"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
