<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout style="@style/Title_padding_blue" />

    <RelativeLayout style="@style/Title_blue">

        <Widget.Back
            android:id="@+id/btn_back"
            style="@style/Back" />

        <TextView
            android:id="@+id/textView7"
            style="@style/Title_name"
            android:text="项目详情" />

        <CheckBox
            android:id="@+id/Favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/textView7"
            android:text="收藏" />

        <Button
            android:id="@+id/btn_JoinRaised"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerVertical="true"
            android:background="@drawable/ripple_yelow"
            android:text="加入众筹"
            android:textColor="#fff"
            android:visibility="visible" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/DetailLayout">

                    <TextView
                        style="@style/DetailText"
                        android:text="项目名称：" />

                    <TextView
                        android:id="@+id/tv_ProjectName"
                        style="@style/DetailTextRight" />
                </LinearLayout>

                <LinearLayout style="@style/DetailLayout">

                    <TextView
                        style="@style/DetailText"
                        android:text="负责人　：" />

                    <TextView
                        android:id="@+id/tv_DutyPeople"
                        style="@style/DetailTextRight" />
                </LinearLayout>

                <LinearLayout style="@style/DetailLayout">

                    <TextView
                        style="@style/DetailText"
                        android:text="指导老师：" />

                    <TextView
                        android:id="@+id/tv_Teacher"
                        style="@style/DetailTextRight" />
                </LinearLayout>

                <LinearLayout style="@style/DetailLayout">

                    <TextView
                        style="@style/DetailText"
                        android:text="项目类型：" />

                    <TextView
                        android:id="@+id/tv_ProjectType"
                        style="@style/DetailTextRight" />
                </LinearLayout>

                <LinearLayout style="@style/DetailLayout">

                    <TextView
                        style="@style/DetailText"
                        android:text="项目状态：" />

                    <TextView
                        android:id="@+id/tv_ProjectState"
                        style="@style/DetailTextRight" />
                </LinearLayout>

                <LinearLayout
                    style="@style/DetailLayout"
                    android:orientation="vertical">

                    <TextView
                        style="@style/DetailText"
                        android:text="项目内容：" />

                    <TextView
                        android:id="@+id/tv_Content"
                        style="@style/DetailTextRight" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="参与人员"
                    android:textColor="#AAA"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_thinkJoin"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/ripple"
                    android:text="申请加入"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </RelativeLayout>

            <ListView
                android:id="@+id/listView_Join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null" />
        </LinearLayout>


    </ScrollView>
</LinearLayout>