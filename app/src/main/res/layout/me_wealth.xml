<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout style="@style/Title_padding_blue" />

    <RelativeLayout style="@style/Title_blue">

        <Widget.Back
            android:id="@+id/btn_back"
            style="@style/Back" />

        <TextView
            style="@style/Title_name"
            android:text="我的财富" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/MyRemainder"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ripple_lowgray"
                android:text="我的余额                                                                         >"
                android:textColor="#fff"
                android:textSize="15dp" />

            <Button
                android:id="@+id/MyRecharge"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ripple_lowgray"
                android:text="充值中心                                                                         >"
                android:textColor="#fff"
                android:textSize="15dp" />

            <Button
                android:id="@+id/MyBill"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ripple_lowgray"
                android:text="我的账单                                                                         >"
                android:textColor="#fff"
                android:textSize="15dp" />

            <Button
                android:id="@+id/Extract"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ripple_lowgray"
                android:text="现金提取                                                                         >"
                android:textColor="#fff"
                android:textSize="15dp" />

            <Button
                android:id="@+id/Transfer"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ripple_lowgray"
                android:text="转账他人                                                                         >"
                android:textColor="#fff"
                android:textSize="15dp" />

            <Button
                android:id="@+id/Earn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ripple_lowgray"
                android:text="赚取资金                                                                         >"
                android:textColor="#fff"
                android:textSize="15dp" />

            <Button
                android:id="@+id/Investment"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ripple_lowgray"
                android:text="我投资的众筹项目                                                         >"
                android:textColor="#fff"
                android:textSize="15dp" />

            <Button
                android:id="@+id/Excellent_Raised"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ripple_lowgray"
                android:text="优秀众筹项目推荐                                                         >"
                android:textColor="#fff"
                android:textSize="15dp" />

            <Button
                android:id="@+id/Excellent_Project"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ripple_lowgray"
                android:text="年度优秀项目评选                                                         >"
                android:textColor="#fff"
                android:textSize="15dp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>